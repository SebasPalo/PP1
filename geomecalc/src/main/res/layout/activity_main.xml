<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/skyblue"
    tools:context="com.sebaspalo.geomecalc.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/aliceblue">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccione Figura:"
            android:textSize="36sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="7sp"
            android:background="@color/black">
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/RGroup">

                    <RadioButton style="@style/RadioButtonStyle"
                        android:text="Cuadro"
                        android:id="@+id/RBcuadro"

                        />
                    <RadioButton style="@style/RadioButtonStyle"
                        android:text="Circulo"
                        android:id="@+id/RBcirculo"
                        />
                    <RadioButton style="@style/RadioButtonStyle"
                        android:text="Triangulo"
                        android:id="@+id/RBtriangulo"
                        />
                    <RadioButton style="@style/RadioButtonStyle"
                        android:text="Cubo"
                        android:id="@+id/RBcubo"
                        />
                </RadioGroup>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/all"
                    android:id="@+id/iFigura"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="6sp"
            android:background="@color/orange">

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText style="@style/EditTextStyle"
                    android:hint="Param1"
                    android:id="@+id/eParam1"
                    android:visibility="invisible"/>

                <EditText style="@style/EditTextStyle"
                    android:hint="Lado 2"
                    android:id="@+id/eLado2"
                    android:visibility="invisible"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText style="@style/EditTextStyle"
                    android:hint="Base"
                    android:id="@+id/eBase"
                    android:visibility="invisible"/>
                <EditText style="@style/EditTextStyle"
                    android:hint="Altura"
                    android:id="@+id/eAltura"
                    android:visibility="invisible"/>
            </LinearLayout>

        </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.5"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5sp"
        android:background="@color/black">
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Calcular"
        android:textSize="32sp"
        android:background="@color/orange"
        android:id="@+id/bCalcular"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5sp"
        android:background="@color/black">
    </LinearLayout>

</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView style="@style/EditTextStyle"
            android:text="Perimetro:"/>
        <TextView style="@style/EditTextStyle"
            android:text="Area:"/>
        <TextView style="@style/EditTextStyle"
            android:text="Volumen:"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView style="@style/EditTextStyle"
            android:text="0.0"
            android:id="@+id/tPeri"/>
        <TextView style="@style/EditTextStyle"
            android:text="0.0"
            android:id="@+id/tArea"/>
        <TextView style="@style/EditTextStyle"
            android:text="0.0"
            android:id="@+id/tVolumen"/>


    </LinearLayout>

</LinearLayout>




    </LinearLayout>

</LinearLayout>
