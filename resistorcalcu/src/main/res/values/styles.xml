<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RadioButtonStyle">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:onClick">clickradio</item>
        <item name="android:textSize">22sp</item>


    </style>

    <style name="TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30sp</item>

    </style>


    <style name="ButtonStyle">
        <item name="android:layout_width">10sp</item>
        <item name="android:layout_height">100sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">10sp</item>
        <item name="android:visibility">invisible</item>
        <item name="android:background">@drawable/gray</item>
        <item name="android:onClick">clickbutton</item>
    </style>


</resources>
