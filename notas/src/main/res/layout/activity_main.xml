<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"


    tools:context="com.sebaspalo.notas.MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingrese sus notas"
        android:textSize="30dp"
        android:textColor="@color/darkred"
        android:background="@color/black"
        android:textStyle="bold"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/forestgreen"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="25dp"
            android:textColor="@color/darkred"
            android:background="@color/black"/>

        <TextView android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="wrap_content"
            android:text="Nota"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textColor="@color/darkred"
            android:background="@color/black"
            android:textStyle="italic"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">

        <!--1-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView style="@style/TextViewStyle"
                android:text="Practicas"
                />
            <TextView style="@style/TextViewStyle"
                android:text="Avance 1 Proyecto"
                />
            <TextView style="@style/TextViewStyle"
                android:text="Avance 2 Proyecto"
                />
            <TextView style="@style/TextViewStyle"
                android:text="Avance 3 Proyecto"
                />
            <TextView style="@style/TextViewStyle"
                android:text="Aplicacion Final"
                />
         <!--f1-->
        </LinearLayout>

        <!--2-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText style="@style/EditTextStyle"
                android:id="@+id/eN1"
                />
            <EditText style="@style/EditTextStyle"
                android:id="@+id/eN2"
                />
            <EditText style="@style/EditTextStyle"
                android:id="@+id/eN3"
                />
            <EditText style="@style/EditTextStyle"
                android:id="@+id/eN4"
                />
            <EditText style="@style/EditTextStyle"
                android:id="@+id/eN5"
                />

         <!--f2-->
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/forestgreen"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Nota Final:"
            android:textAlignment="textEnd"
            android:textSize="30dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="match_parent"
            android:text=""
            android:textAlignment="center"
            android:textSize="30dp"
            android:id="@+id/tNotafinal"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/forestgreen"></LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28dp"
        android:text="Calcular"
        android:id="@+id/bCalcular"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/darkolivegreen"></LinearLayout>



</LinearLayout>
