<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/darkviolet</item>
        <item name="android:background">@color/black</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textStyle">italic</item>

    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:background">@color/black</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:hint">0.0</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textAlignment">center</item>
        <!--<item name="android:numeric">decimal</item>-->
        <!--<item name="android:digits">0123456789.</item>-->
        <item name="android:inputType">numberDecimal|none</item>
    </style>

</resources>
